<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OsasProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/navy</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>    </style>


    <!-- Tool bar styling -->
        <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
            <item name="android:background">@color/navy</item>
            <item name="android:textColorPrimary">@color/white</item>


    </style>

    <!-- Tool bar styling -->
    <style name="SplashScreenTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/navy</item>
        <item name="android:textColorPrimary">@color/white</item>


    </style>
</resources>